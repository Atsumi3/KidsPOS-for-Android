<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="info.nukoneko.cuc.android.kidspos">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name=".KidPOSApplication"
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:theme="@style/AppTheme"
        android:logo="@drawable/river_kun1"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity
            android:name=".ui.main.LaunchActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:theme="@style/AppTheme.NoActionBar"
            android:icon="@drawable/river_kun1"
            android:name=".ui.main.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" />

        <activity
            android:name=".ui.calculator.CalculatorActivity"
            android:label="@string/label_calc"
            android:screenOrientation="landscape"/>

        <activity
            android:name=".ui.setting.SettingsActivity"
            android:label="@string/drawer_setting"
            android:screenOrientation="landscape"/>

    </application>

</manifest>
