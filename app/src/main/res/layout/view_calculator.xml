<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="listener"
            type="android.view.View.OnClickListener" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:orientation="vertical"
        android:weightSum="4">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="3" >
            <Button
                android:id="@+id/calc_num_7"
                android:text="7"
                android:textSize="@dimen/text_size_button_calc"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="@{listener}"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/calc_num_8"
                android:text="8"
                android:textSize="@dimen/text_size_button_calc"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="@{listener}"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/calc_num_9"
                android:text="9"
                android:textSize="@dimen/text_size_button_calc"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="@{listener}"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="3" >
            <Button
                android:id="@+id/calc_num_4"
                android:text="4"
                android:textSize="@dimen/text_size_button_calc"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="@{listener}"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/calc_num_5"
                android:text="5"
                android:textSize="@dimen/text_size_button_calc"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="@{listener}"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/calc_num_6"
                android:text="6"
                android:textSize="@dimen/text_size_button_calc"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="@{listener}"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="3" >
            <Button
                android:id="@+id/calc_num_1"
                android:text="1"
                android:textSize="@dimen/text_size_button_calc"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="@{listener}"
                android:layout_weight="1" />
            <Button
                android:id="@+id/calc_num_2"
                android:text="2"
                android:textSize="@dimen/text_size_button_calc"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="@{listener}"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/calc_num_3"
                android:text="3"
                android:textSize="@dimen/text_size_button_calc"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="@{listener}"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="3" >
            <Button
                android:id="@+id/calc_num_0"
                android:text="0"
                android:textSize="@dimen/text_size_button_calc"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="@{listener}"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/calc_num_C"
                android:text="1桁消"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" />
            <Button
                android:id="@+id/calc_num_end"
                android:text="売る"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@android:color/holo_red_light"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</layout>