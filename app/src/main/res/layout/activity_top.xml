<!-- A DrawerLayout is intended to be used as the top-level content view using match_parent for both width and height to consume the full space available. -->

<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="info.nukoneko.cuc.android.kidspos.activity.TopPageActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.Toolbar
            android:id="@+id/tool_bar"
            android:layout_height="wrap_content"
            android:layout_width="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            android:minHeight="?attr/actionBarSize"
            android:background="?attr/colorPrimary">
        </android.support.v7.widget.Toolbar>
        <TextView
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tool_bar"
            android:layout_alignTop="@id/tool_bar"
            android:layout_alignBottom="@id/tool_bar"
            android:textSize="40sp"
            android:gravity="center_vertical|right"
            android:padding="8dp"/>
        <RelativeLayout
            android:id="@+id/footer_layout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/clear"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:background="@drawable/button_circle"
                android:text="けす"
                android:textSize="30sp" />
            <TextView
                android:id="@+id/staff_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/clear"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:textSize="30sp"
                android:text="担当者"/>
            <TextView
                android:id="@+id/staff_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/staff_title"
                android:layout_toLeftOf="@id/account"
                android:gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:textSize="30sp" />
            <Button
                android:id="@+id/account"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:gravity="center_vertical"
                android:text="かいけい"
                android:layout_alignParentRight="true"
                android:background="@drawable/button_rect"
                android:textSize="30sp"/>
        </RelativeLayout>
        <info.nukoneko.cuc.android.kidspos.itemlist.ItemListView
            android:id="@+id/item_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/price"
            android:layout_above="@id/footer_layout"
            android:padding="8dp"/>
    </RelativeLayout>
    <info.nukoneko.cuc.android.kidspos.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:layout_gravity="start"
        android:background="#fff"
        android:elevation="8dp"
        android:layout_marginTop="?attr/actionBarSize" />
</android.support.v4.widget.DrawerLayout>